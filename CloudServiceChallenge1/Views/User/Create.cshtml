@model CloudServiceChallenge1.Models.UserModel

@{
    ViewData["Title"] = "Create";
}

<h1>作成する</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">ユーザー名 </label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">ランクポイント</label>
                <input asp-for="RankPoints" class="form-control" />
                <span asp-validation-for="RankPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="作成する" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">リストに戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
